<div class="container py-5">
  <h1 class="mb-4">Cook book</h1>
  <div class="d-flex flex-wrap gap-4">
    <% @categories.each do |category| %>
      <div class="category-card p-3 border rounded shadow-sm">
        <h2><%= link_to category.name, category_path(category) %></h2>
      </div>
    <% end %>
    <%= link_to "New category", new_category_path, class: "btn btn-flat" %>
  </div>
</div>
