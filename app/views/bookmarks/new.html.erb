<div class="form-new mt-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Add Recipe to <%= @category.name %></h1>
        <%= simple_form_for [@category, @bookmark] do |f| %>
          <div class="form-group">
            <%= f.input :comment %>
            <%= f.association :recipe, prompt: "Select Recipe" %>
          </div>
          <%= f.submit "Add Recipe", class: 'btn btn-primary' %>
        <% end %>
        <%= link_to 'Back to Category', category_path(@category), class: 'btn btn-secondary mt-3' %>
      </div>
    </div>
  </div>
</div>
